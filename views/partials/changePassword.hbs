<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="mr-2">
          <div class="form-group row">
            <label for="changePasswordCurrentPasswordModalId" class="col-sm-5 col-form-label">Current Password</label>
            <input type="password" class="form-control col-sm-7" name="currentPassword" id="changePasswordCurrentpasswordModalId">
          </div>
          <div class="form-group row">
            <label for="changePasswordNewPasswordModalId" class="col-sm-5 col-form-label">New Password</label>
            <input type="password" class="form-control col-sm-7" name="newPassword" id="changePasswordNewpasswordModalId">
          </div>
          <button type="submit" id="changePasswordModalButton" class="btn btn-secondary">Change password</button>
        </form>
      </div>
    </div>
  </div>
</div>
